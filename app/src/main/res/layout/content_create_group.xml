<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_create_group"
    tools:context="com.pieroncini.tommaso.goshopping.ui.main.CreateGroupActivity"
    android:background="@drawable/background">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText7"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:hint="New group name"
        android:textSize="30dp"
        android:textColor="?attr/colorPrimaryDark"
        android:textColorHint="?attr/colorPrimaryDark"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText8"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:hint="New member username"
        android:layout_toStartOf="@+id/button8"
        android:textColor="?attr/colorPrimaryDark"
        android:textColorHint="?attr/colorPrimaryDark"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button8"
        android:clickable="true"
        android:background="@drawable/add_member"
        android:layout_alignTop="@+id/editText8"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Members added: 0"
        android:id="@+id/textView3"
        android:layout_below="@+id/editText8"
        android:layout_alignParentStart="true"
        android:textColor="?attr/colorPrimaryDark" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Create"
        android:id="@+id/button5"
        android:background="?attr/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:layout_alignEnd="@+id/button8" />
</RelativeLayout>
