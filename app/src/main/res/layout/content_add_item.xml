<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_add_item"
    tools:context="com.pieroncini.tommaso.goshopping.ui.group.AddItemActivity"
    android:background="@drawable/background">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText9"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:hint="Item name"
        android:padding="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:inputType="text"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText11"
        android:layout_below="@+id/editText9"
        android:layout_alignEnd="@+id/editText9"
        android:layout_alignParentStart="true"
        android:hint="Item quantity"
        android:padding="20dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:inputType="text"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText12"
        android:layout_below="@+id/editText11"
        android:layout_alignEnd="@+id/editText11"
        android:layout_alignParentStart="true"
        android:hint="Notes"
        android:padding="20dp"
        android:textAlignment="center"
        android:inputType="text"
        android:imeOptions="actionDone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit New Item"
        android:id="@+id/button9"
        android:layout_below="@+id/editText12"
        android:layout_alignEnd="@+id/editText12" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/camera_icon_scripted_2"
        android:id="@+id/button10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Picture Not Taken"
        android:id="@+id/textView8"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/button10"
        android:layout_alignParentStart="true" />

</RelativeLayout>
